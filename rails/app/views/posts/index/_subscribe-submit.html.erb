<div id="collapse<%= t.id %>" class="collapse" aria-labelledby="heading<%= t.id %>" data-parent="#accordion<%= t.id %>" style="background-color: white; margin: 0 10px; transition: none 0s ease 0s;">
    <%= form_tag(actions_index_path, method: "get") do %>
        <div class="row alarm-div">
            <div class="col-md-12" style="margin-top: 5px">구독 알림설정</div>
            <div class="col-md-12" style="text-align: right; margin-top: 5px; justify-self: center;"><%= check_box_tag :switch, checked = true, class: "lcs_check" %></div>
            
            <div class="col-md-12" style="margin-top: 10px; justify-self: center;"><%= text_field_tag(:keyword_1, nil, class: "input_noborder", placeholder: "첫 번째 키워드") %></div>
            <div class="col-md-12" style="margin-top: 10px; justify-self: center;"><%= text_field_tag(:keyword_2, nil, class: "input_noborder", placeholder: "두 번째 키워드") %></div>
            
            <div class="col-md-12" style="margin-top: 15px; justify-self: center; justify-content: center; display: flex;"><i class="fas fa-mobile-alt fa-2x"></i></div>
            <div class="col-md-12" style="text-align: right; margin-top: 15px; justify-self: center;"><%= check_box_tag :sms, checked = true, class: "lcs_check" %></div>
            <div class="col-md-12" style="margin-top: 15px; justify-self: center; justify-content: center; display: flex;"><i class="far fa-envelope fa-2x"></i></div>
            <div class="col-md-12" style="text-align: right; margin-top: 15px;justify-self: center;"><%= check_box_tag :mail, checked = true, class: "lcs_check" %></div>
            <input value="<%= t.id %>" name="post_num" type="hidden" />
            <input value="<%= current_user.id %>" name="user_id" type="hidden" />
        </div>
        <div style="text-align: right; margin-top: 15px; margin-bottom: 5px; "><%= submit_tag("등록", class: "font-coredream", class: "subscribe-submit", style: "cursor: pointer;") %></div>
    <% end %>
</div>